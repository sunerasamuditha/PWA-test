# Application Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=wecare_db
DB_CONNECTION_LIMIT=10

# Authentication (Phase 2)
# Generate a secure secret key for production: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h

# Encryption Configuration (Phase 13)
# CRITICAL: Generate a 32-byte (64 hex characters) encryption key for AES-256-GCM
# Generate key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Alternative: openssl rand -hex 32
# 
# IMPORTANT NOTES:
# - This key encrypts sensitive PII (passport numbers, insurance policy numbers)
# - Changing this key will make existing encrypted data unreadable
# - Use DIFFERENT keys for development, staging, and production
# - Store production keys in a secure secrets management service (AWS Secrets Manager, Azure Key Vault, etc.)
# - NEVER commit the actual key to version control
# - Back up the key securely - losing it means permanent data loss
# - Rotate keys periodically (requires data re-encryption migration)
#
# For development ONLY, you can generate a temporary key with the command above.
# The application will warn you on startup if ENCRYPTION_KEY is not set in development mode.
# In production, the application will FAIL to start if ENCRYPTION_KEY is not set.
ENCRYPTION_KEY=
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting Configuration (Phase 13)
# Window in milliseconds (900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100
# Whether to skip counting successful requests
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Audit Log Configuration (Phase 13)
# Retention period in days (730 = 2 years for compliance)
AUDIT_LOG_RETENTION_DAYS=730
# Enable audit log export functionality
AUDIT_LOG_EXPORT_ENABLED=true

# File Upload Configuration
UPLOAD_DIR=./uploads

# CORS Configuration
# Frontend URL for development
CORS_ORIGIN=http://localhost:5173

# Timezone Configuration
# Business timezone for appointment scheduling and date calculations
# Use IANA timezone format (e.g., 'America/New_York', 'Asia/Kolkata', 'Europe/London')
BUSINESS_TIMEZONE=Asia/Kolkata

# Partner/Referral System Configuration (Phase 5)
# Client URL for QR code generation and referral links
CLIENT_URL=http://localhost:5173
# Default commission points per referral
DEFAULT_COMMISSION_POINTS=10

